
public class Machine {
	final Gere gere;
	final Bli bli;
	private Etat etatCourant;
	public Machine() {
		bli=new Bli(this);
		gere=new Gere(this);
	}
	public Gere getGere() {
		return gere;
	}
	public Bli getBli() {
		return bli;
	}
	public Etat getEtarCourant() {
		return etatCourant;
	}
	public void setEtarCourant(Etat etarCourant) {
		this.etatCourant = etarCourant;
	}
	public void truc() {
		etatCourant.truc();
	}
	public void machin() {
		etatCourant.machin();
	}
	
	
}
